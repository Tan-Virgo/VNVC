#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/php" ]; then
  exec "$basedir/php"  "$basedir/../php-getcomposer/composer.phar" "$@"
else 
  exec php  "$basedir/../php-getcomposer/composer.phar" "$@"
fi
